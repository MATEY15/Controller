@import ("../../libs/template/reset.css")
@import ("../../libs/template/lib")
@import ("../../libs/template/media")

@import ("libs/*.css")
@import ("fonts")
@import ("blocks/**/**")
@import ("section/**/**")

*
	box-sizing border-box

html
	height 100%
	// background: cBlack

body
	position relative
	overflow-x: hidden
	min-width 320px
	background: cWhite
	font-family: fPSR
	min-height 100%
	&.overflow
		overflow hidden

// #overlayer
// 	width 100%
// 	height 100%
// 	position fixed
// 	top 0
// 	left 0
// 	z-index 11
// 	background cBlack

.info-p
	position fixed
	left 0
	bottom 0
	z-index 100
	background: #ccc
	padding 15px
	display none

.align-right
	float right
.align-left
	float left

a
	color cWhite
	text-decoration none

.text-Bafora
	font-family: fBD

h1, h2, h3, h4, h5, h6
	font-family: fPSB

h1
	font-size 32px
h2
	font-size 28px
h3
	font-size 26px
h4
	font-size 22px
h5
	font-size 18px
h6
	font-size 16px

.container
	box-sizing border-box
	max-width 1200px
	width 100%
	padding-left 10px
	padding-right 10px
	margin 0 auto
	@media screen and (max-width: 1200px)
		max-width 991px
		padding-left 15px
		padding-right 15px
	@media screen and (max-width: 768px)
		padding-left 20px
		padding-right 20px
	// @media screen and (max-width: 640px)
	// 	padding-left 20px
	// 	padding-right 20px
	
.heading-h2
	color cBlack
	font-family: fPSB
	font-size 32px
	text-align center
	@media screen and (max-width: 640px)
		font-size 28px
		br
			display none

.ml-58
	margin-left 58px
