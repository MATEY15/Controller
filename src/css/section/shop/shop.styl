.shop-view
	background: #0A0B1A
	padding-bottom 80px
	

	.champ-dot-big--icon
		@media screen and (max-width: 600px)
			display block
			margin 0 auto 15px

.name-list
	color: #c1c3df
	font-family: fPSM
	font-size: 21px
	letter-spacing: 0.12px
	margin-right 22px
	@media screen and (max-width: 854px)
		font-size 17px
		line-height: 26px
	@media screen and (max-width: 768px)
		margin-bottom 15px

.shop-filter
	background-color: rgba(15, 14, 31, 0.65)
	@media screen and (max-width: 768px)
		padding-top 25px
		padding-bottom 30px

.shop-filter--list
	display flex
	flex-direction row
	align-items center
	min-height: 78px
	@media screen and (max-width: 768px)
		flex-direction column
		align-items flex-start
	
	ul
		display flex
		flex-direction row
		flex-wrap wrap
		margin -5px -7px
		@media screen and (max-width: 768px)
			margin -6px -7px
		li
			min-height: 45px
			background-color: #16182c
			margin 5px 7px
			@media screen and (max-width: 768px)
				margin 6px 7px
			
			trn(.15s)
			&:hover
				background: #12162d
				a
					color #fff
			&:not(:last-child)
				// margin-right 14px
			a
				display inline-block
				color: #c1c3df
				font-family: fPSM
				font-size: 17px
				letter-spacing: 0.1px
				line-height: 26px
				min-width 70px
				text-align center
				padding 14px 24px 15px 14px
				trn(.15s)
				@media screen and (max-width: 854px)
					padding 9px 20px 10px 14px
				span
					color: #5150ff

.shop-heading,
.shop-heading--center
	margin-top 65px
	margin-bottom 68px
	@media screen and (max-width: 600px)
		text-align center
		margin-top 30px
		margin-bottom 32px
		margin-left auto
		margin-right auto
		max-width 385px
	h3
		color: #ffffff
		font-family: fPSB
		font-size: 38px
		margin-bottom 15px
		@media screen and (max-width: 600px)
			font-size 32px
	p
		color: rgba(193, 195, 223, 0.66)
		font-family: fPSL
		font-size: 17px
		letter-spacing: 0.1px
		line-height: 26px
		br
			@media screen and (max-width: 768px)
				display none

.shop-heading--center
	text-align center

.shop-wrapper
	&.pt-15
		padding-top: 15px
		@media screen and (max-width: 600px)
			padding-top 35px

.shop-wrap
	display flex
	flex-direction row
	flex-wrap wrap
	margin -30px -12px
	@media screen and (max-width: 854px)
		margin -15px -10px
	@media screen and (max-width: 600px)
		margin -10px

.shop-col
	width calc(100% / 3)
	padding 30px 12px
	@media screen and (max-width: 854px)
		padding 15px 10px
	@media screen and (max-width: 800px)
		width calc(100% / 2)
	@media screen and (max-width: 600px)
		width 100%
		padding 10px

.shop-items
	position relative
	display flex
	flex-direction column
	justify-content center
	align-items center
	min-height: 299px
	max-width 385px
	margin 0 auto
	text-decoration none
	padding 10px 30px 0
	background-image: linear-gradient(209deg,rgba(13, 12, 27, 0.35) 0,rgba(13, 12, 27, 0.35) 14%,rgba(23, 22, 39, 0.35) 100%)
	@media screen and (max-width: 600px)
		border-radius: 6px
		box-shadow: 0 7px 16px -2px rgba(0, 0, 0, 0.11)
		background-image: radial-gradient(circle at 31% 44%, #21264e, #121125 68%)
		overflow hidden
	
	&:hover
		&:before
			opacity 1
			visibility visible

	&>div
		position relative
	
	&:before
		position absolute
		top 0
		left 0
		content ''
		width 100%
		height 100%
		display block
		box-shadow: 0 7px 16px -2px rgba(0, 0, 0, 0.11)
		background-image: radial-gradient(circle at 31% 44%, #21264e, #121125 56%)
		opacity 0
		visibility hidden
		trn(.25s)
	
.shop-items--img
	max-width 250px
	margin-bottom 14px
	img
		position relative
		max-width 100%
	&:before
		position absolute
		bottom 25px
		content ''
		width: 226px
		height: 63px
		background-color: #000000
		opacity: 0.55
		filter: blur(15px)
		@media screen and (max-width: 640px)
			height 23px
			bottom 0

.shop-items--info
	text-align center
	.name-prod
		color: #ffffff
		font-family: fPSB
		font-size: 18px
		letter-spacing: -.5px
		line-height: 31px
		@media screen and (max-width: 600px)
			font-family: fPSBl
			font-size: 17px
			text-transform: uppercase
			letter-spacing: inherit
	.price
		color: rgba(255, 255, 255, 0.46)
		font-family: fPSR
		font-size: 18px
		@media screen and (max-width: 600px)
			color: #abff4e
			font-family: fPSL
			font-size: 21px