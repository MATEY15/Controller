.custom-select {
	position: relative;
	font-family: Arial;
}
.custom-select select {
	display: none;
}
.select-selected {
	font-size: 13px;
	color: #333;
}
.select-selected.select-arrow-active:after {
	-webkit-transform: rotate(-180deg);
	-ms-transform: rotate(-180deg);
	-o-transform: rotate(-180deg);
	transform: rotate(-180deg);
}
.select-selected:after {
	position: absolute;
	content: "";
	top: 15px;
	right: 20px;
	width: 0;
	height: 0;
	border-style: solid;
	border-width: 6px 5px 0 5px;
	border-color: #ffffff transparent transparent transparent;
	z-index: 2;
	pointer-events: none;
	-webkit-transition: all .25s ease-out;
	-o-transition: all .25s ease-out;
	transition: all .25s ease-out;
}
.select-selected.select-arrow-active:after {
	//top: 14px;
}
.select-selected {
	font-size: 13px;
	padding: 8px 16px 8px 10px;
	color: #ffffff
	font-family: fAND;
	font-size: 16px;
	outline: none;
	border-radius: 2px;
	border: 2px solid rgba(124, 139, 137, 0.42);
	cursor: pointer;
}
.select-items div {
	color: #ffffff
	font-family: fAND;
	font-size: 16px;
	padding: 8px 16px 8px 10px;
	cursor: pointer;
}
.select-items {
	opacity: 1;
	visibility: visible;
	position: absolute;
	font-size: 13px;
	color: #333;
	background: #0B0A1D;
	top: 110%;
	left: 0;
	right: 0;
	z-index: 99;
	-webkit-transition: all .1s ease-in-out;
	-o-transition: all .1s ease-in-out;
	transition: all .1s ease-in-out;
	-webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
	box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
}
.select-items div:hover {
	background: #100f29;
}
.select-hide {
	//display: none;
	opacity: 0;
	visibility: hidden;
	top: 140%;
}
.select-items div:hover, .same-as-selected {
	background: #100f29;
}

.wrapper {
	max-width: 960px;
	margin: 80px auto;
}
.wrapper-item {
	width: 180px;
	padding: 0 10px;
	float: left;
}