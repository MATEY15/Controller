headerHeight = 85px // variable

.header
	position relative
	min-height 907px
	background: #050714
	background-repeat no-repeat
	background-position: center bottom

.header-home
	@media screen and (max-width: 1200px)
		min-height 840px
	@media screen and (max-width: 720px)
		min-height 100%
		padding-bottom 64px
		background-image: url(../img/mbg-home.jpg) !important
		background-repeat no-repeat
		background-position: right bottom

.logo-wrapper
	padding-top 14px

.top-line
	position relative
	min-height: 61px
	background-color: #060513
	display flex
	flex-direction row
	justify-content space-between
	padding-left 17px
	padding-right 30px
	
	.container
		display flex
		flex-direction row
		justify-content space-between

.top-line--left
	display flex
	flex-direction row
	align-items center
	padding-top 1px

.menu-wrapper
	background-color: #060513
	@media screen and (max-width: 768px)
		position absolute
		top 100%
		left 0
		width 100%
		height calc(100vh - 61px)
		padding-left 20px
		opacity 0
		visibility hidden
		trn(.2s)
		z-index 200
	
	&.is-active
		opacity 1
		visibility visible

	ul
		display flex
		flex-direction row
		@media screen and (max-width: 768px)
			flex-direction column
		li
			@media screen and (max-width: 768px)
				border-bottom 1px solid rgba(216, 216, 216, 0.13)
			&:not(:last-child)
				margin-right 45px
				@media screen and (max-width: 854px)
					margin-right 30px
				@media screen and (max-width: 768px)
					margin-right 0
					
			&:hover
				a
					c #fff
			a
				display flex
				align-items center
				color: #9f9ea8
				font-family: fPSR
				font-size: 12px
				letter-spacing: 1px
				line-height: 57px
				text-transform: uppercase
				text-decoration none
				trn(.15s)
				
				img,
				svg
					margin-right 10px

.user-block
	margin-left 75px
	@media screen and (max-width: 854px)
		margin-left 40px
	
	ul
		display flex
		flex-direction row
		li
			&:not(:first-child)
				margin-left 40px
			&.user-list
				@media screen and (max-width: 854px)
					display none
			a
				text-decoration none

.burger-menu
	width 20px
	margin-left 35px
	cursor pointer
	display none
	@media screen and (max-width: 768px)
		display block
	span
		position relative
		display block
		height 2px
		width 100%
		background: #fff
		opacity 1
		visibility visible
		trn(.2s)
		&:not(:last-child)
			margin-bottom 4px
	
	&.is-active
		span
			margin-bottom 0
			background: #26d13d
			&:nth-child(1)
				transform rotateZ(-45deg)
				top 2px
			&:nth-child(2)
				opacity 0
				visibility hidden
				background: #fff
				tt(25px, 0)
			&:nth-child(3)
				transform rotateZ(45deg)
				top -2px

.icon-cart
	fill #fff


.return-top
	position relative
	display flex
	justify-content center
	align-items center
	min-height 51px
	background: #0b0921
	padding-left 50px
	padding-right 50px
	trn(.15s)
	
	&.hide-block
		opacity 0
		visibility hidden
	
	@media screen and (max-width: 640px)
		display none
	
	.close-return
		position absolute
		right 32px
		top 19px
		text-decoration none

	.return-top--heading
		color: #ffffff
		font-family: fPSM
		font-size: 15px
		letter-spacing: 0.32px
		text-transform: uppercase
		margin-right 14px
	p
		color: rgba(255, 255, 255, 0.45)
		font-size: 15px
		letter-spacing: 0.32px
		a
			text-decoration underline
			color rgba(255, 255, 255, 0.45)
			trn(.2s)
			&:hover
				color #fff


// Header content

.header-home
	
	.header-home--content
		padding-left 34px
		overflow hidden
		
		@media screen and (max-width: 1400px)
			padding-left 0

.controller-header
	@media screen and (max-width: 1400px)
		margin-left 0
	@media screen and (max-width: 1200px)
		max-width 100%
	@media screen and (max-width: 600px)
		min-width 352px
		max-width 352px
		margin 0 auto
	@media screen and (max-width: 480px)
		min-width auto
		max-width 240px

.header-home--content
	padding-top 124px
	@media screen and (max-width: 720px)
		padding-top 60px
	@media screen and (max-width: 600px)
		padding-top 40px
	.container
		display flex
		flex-direction row
		@media screen and (max-width: 720px)
			padding-left 20px
			padding-right 20px
		
		@media screen and (max-width: 991px)
			align-items center
		@media screen and (max-width: 600px)
			flex-direction column
		
	.home-content--items
		width: calc(100% / 2)
		@media screen and (max-width: 600px)
			width 100%

.controller-wrap
	position relative
	@media screen and (max-width: 600px)
		text-align center

.heading-home
	padding-top 66px
	@media screen and (max-width: 991px)
		padding-top 0
	@media screen and (max-width: 720px)
		margin-bottom 70px
	h1
		color: #ffffff
		font-family: fPSBl
		font-size: 69px
		text-transform: uppercase
		margin-bottom 45px
		@media screen and (max-width: 1200px)
			font-size 54px
		@media screen and (max-width: 840px)
			font-size 48px
			margin-bottom 40px
		@media screen and (max-width: 720px)
			font-size 37px
			margin-bottom 26px
		span
			display block
			font-family: fPST
			margin-bottom 4px