.community-section
	overflow hidden
	padding-top 45px
	padding-bottom 50px
	margin-top -45px
	margin-bottom -50px
	.community-offset
		position relative
		padding-top 130px
		padding-bottom 120px
		background-image: -webkit-linear-gradient(320deg, #050714 0%, #0e1645 100%)
		background-image: -o-linear-gradient(320deg, #050714 0%, #0e1645 100%)
		background-image: linear-gradient(50deg, #050714 0%, #0e1645 100%)
		@media screen and (max-width: 600px)
			padding-top 173px
			background-image: -webkit-linear-gradient(320deg, #0e1645 0%, #050714 100%)
			background-image: -o-linear-gradient(320deg, #0e1645 0%, #050714 100%)
			background-image: linear-gradient(50deg, #0e1645 0%, #050714 100%)
	
	&>.container
		position relative
		z-index 10
	
	.community-background
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		.container-full
			max-width 1440px
			width 100%
			margin 0 auto
			position relative
			height 100%
		
		.bgX-icon
			position absolute
			top 0
			left 40%
			@media screen and (max-width: 600px)
				display none
		
		.triangle2-icon
			position absolute
			top -101px
			right: -310px
			@media screen and (max-width: 1024px)
				top -195px
			svg
				@media screen and (max-width: 1024px)
					display none
		
		.square2-icon
			position absolute
			bottom -95px
			left -165px
			z-index 10
			@media screen and (max-width: 600px)
				display none
		
		.square-small
			position absolute
			bottom 40px
			right 36px
			z-index 10
			@media screen and (max-width: 600px)
				display none
			